# Environment Variables Template
# Copy this to .env.local for local development
# Configure these in Vercel Dashboard for production

# API Configuration (Optional - uncomment if needed)
# VITE_API_URL=https://api.futuremarketingai.com

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEMO_MODE=true

# Deployment Environment
VITE_ENVIRONMENT=development

# Analytics & Tracking
# Google Analytics 4 - Get your Measurement ID from: https://analytics.google.com/
# Format: G-XXXXXXXXXX
VITE_GA4_MEASUREMENT_ID=

# Hotjar - Get your Site ID from: https://insights.hotjar.com/
VITE_HOTJAR_ID=
VITE_HOTJAR_SV=6

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/projects/
# Each environment should have its own DSN for proper error tracking
VITE_SENTRY_DSN_PRODUCTION=
VITE_SENTRY_DSN_STAGING=
VITE_SENTRY_DSN_DEVELOPMENT=

# Sentry Debug Mode (only for development)
VITE_SENTRY_DEBUG=false

# Application Version (for release tracking in Sentry)
VITE_APP_VERSION=1.0.0

# Optional: API Keys (NEVER commit actual keys!)
# VITE_PUBLIC_API_KEY=

# OpenRouter API (AI Assistant)
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here